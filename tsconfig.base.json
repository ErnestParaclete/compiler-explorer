{
  "compilerOptions": {
    /* Code generation */
    "sourceMap": true,
    "downlevelIteration": true,
    "importHelpers": true,
    /* Module resolution */
    "esModuleInterop": true,
    /* Other options */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitOverride": true,

    // For babel: Ensure that .d.ts files are created by tsc, but not .js files
    "declaration": true,
    "emitDeclarationOnly": true,
    // Ensure that Babel can safely transpile files in the TypeScript project
    "isolatedModules": true
  }
}
